{
    "name": "SCREEN",
    "version": "1.8.13",
    "description": "A WebRTC Screen Sharing Solution",
    "main": "app/src/Server.js",
    "scripts": {
        "test": "mocha tests/*.js",
        "start": "node app/src/Server.js",
        "start-dev": "nodemon app/src/Server.js",
        "debug": "DEBUG='mediasoup*' node app/src/Server.js",
        "compile": "npx webpack",
        "lint": "npx prettier --write .",
        "docker-build": "docker build --tag screen/sfu:latest .",
        "docker-rmi": "docker image prune -f",
        "docker-push": "docker push screen/sfu:latest",
        "docker-pull": "docker pull screen/sfu:latest",
        "docker-rmc": "docker container rm SCREEN --force",
        "docker-run": "docker run -d -p 40000-40100:40000-40100 -p 3010:3010 -v ./.env:/src/.env -v ./app/src/config.js:/src/app/src/config.js:ro --name SCREEN screen/sfu:latest",
        "docker-run-vm": "docker run -d -p 40000-40100:40000-40100 -p 3010:3010 -v ./.env:/src/.env -v ./app/:/src/app/:ro -v ./public/:/src/public/:ro --name SCREEN screen/sfu:latest",
        "docker-start": "docker start SCREEN",
        "docker-stop": "docker stop SCREEN",
        "rtmp-start": "docker-compose -f rtmpServers/nginx-rtmp/docker-compose.yml up -d",
        "rtmp-stop": "docker-compose -f rtmpServers/nginx-rtmp/docker-compose.yml down",
        "rtmp-restart": "docker-compose -f rtmpServers/nginx-rtmp/docker-compose.yml down && docker-compose -f rtmpServers/nginx-rtmp/docker-compose.yml up -d",
        "rtmp-logs": "docker logs -f SCREEN-rtmp",
        "nms-node-start": "node rtmpServers/node-media-server/src/server.js",
        "nms-start": "docker-compose -f rtmpServers/node-media-server/docker-compose.yml up -d",
        "nms-stop": "docker-compose -f rtmpServers/node-media-server/docker-compose.yml down",
        "nms-restart": "docker-compose -f rtmpServers/node-media-server/docker-compose.yml down && docker-compose -f rtmpServers/node-media-server/docker-compose.yml up -d",
        "nms-logs": "docker logs -f SCREEN-nms",
        "build": "echo 'No build step required'",
        "vercel-build": "echo 'Vercel build step complete'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/miroslavpejic85/mirotalksfu"
    },
    "keywords": [
        "webrtc",
        "socket.io",
        "broadcasting",
        "sfu",
        "nodejs",
        "video",
        "audio",
        "openai",
        "oidc",
        "chatgpt",
        "rtmp",
        "poll",
        "client",
        "server",
        "streaming",
        "realtime"
    ],
    "author": "Miroslav Pejic",
    "license": "AGPL-3.0",
    "engines": {
        "node": "18.x"
    },
    "dependencies": {
        "@mattermost/client": "10.6.0",
        "@mattermost/types": "^10.6.0",
        "@ngrok/ngrok": "1.4.1",
        "@sentry/node": "^9.11.0",
        "axios": "^1.8.4",
        "chokidar": "^4.0.3",
        "colors": "1.4.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "discord.js": "^14.18.0",
        "dompurify": "^3.2.5",
        "dotenv": "^16.4.7",
        "express": "^4.18.2",
        "express-openid-connect": "^2.18.0",
        "fluent-ffmpeg": "^2.1.3",
        "he": "^1.2.0",
        "helmet": "^8.1.0",
        "httpolyglot": "^0.1.2",
        "js-yaml": "^4.1.0",
        "jsdom": "^26.0.0",
        "jsonwebtoken": "^9.0.2",
        "mediasoup": "^3.13.16",
        "mediasoup-client": "^3.7.1",
        "mongodb": "^6.15.0",
        "mongoose": "^8.13.2",
        "nodemailer": "^6.10.0",
        "openai": "^4.92.1",
        "qs": "6.14.0",
        "sanitize-filename": "^1.6.3",
        "socket.io": "^4.7.4",
        "swagger-ui-express": "^5.0.0",
        "uuid": "^9.0.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "babel-loader": "^10.0.0",
        "mocha": "^11.1.0",
        "node-fetch": "^3.3.2",
        "nodemon": "^3.1.9",
        "prettier": "3.5.3",
        "proxyquire": "^2.1.3",
        "should": "^13.2.3",
        "sinon": "^20.0.0",
        "webpack": "^5.99.1",
        "webpack-cli": "^6.0.1"
    }
}
