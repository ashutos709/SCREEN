{
  "version": 2,
  "builds": [
    {
      "src": "app/src/Server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "app/src/Server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "app/src/Server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
} 