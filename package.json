{
  "name": "screen-sharing-app",
  "version": "1.0.0",
  "description": "Screen sharing application with authentication",
  "scripts": {
    "preinstall": "cd log && npm install && cd ../SCREEN && npm install",
    "start:auth": "cd log && npm run dev",
    "start:screen": "cd SCREEN && npm start",
    "dev": "concurrently \"npm run start:auth\" \"npm run start:screen\"",
    "start": "node start-app.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 